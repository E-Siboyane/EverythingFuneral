@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            $(document.body).delegate('.CloseMessage', 'click', ClosePopupMessage)
            function ClosePopupMessage() {
                $('#Successmessage1').hide();
            }

            $(document.body).delegate('#PrintRequestPage', 'click', PrintRequest)
            function PrintRequest() {
                PrintPage
                //Print PrintReceiptContent
                var myPrintContent = document.getElementById('PrintPage');
                var myPrintWindow = window.open();
                myPrintWindow.document.write(myPrintContent.innerHTML);
                myPrintWindow.document.getElementById('PrintPage').style.display = 'block'
                myPrintWindow.document.close();
                myPrintWindow.focus();
                myPrintWindow.print();
                myPrintWindow.close();
            }

        });
    </script>
}
